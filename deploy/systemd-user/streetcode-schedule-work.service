[Unit]
Description=Streetcode schedule:work
After=network.target
ConditionPathExists=/home/deployer/streetcode-laravel/current

[Service]
Type=simple
WorkingDirectory=/home/deployer/streetcode-laravel/current
ExecStart=/usr/bin/php artisan schedule:work
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
